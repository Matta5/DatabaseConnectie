@model IEnumerable<DatabaseConnectie.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.profile_picture)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                    <img src="@item.profile_picture" alt="Profile Picture" style="max-width: 100px; max-height: 100px;" />


            </td>
            <td>
                    <form asp-action="Edit" asp-route-id="@item.user_id" method="get" style="display:inline;">
                        <input type="submit" value="Edit" />
                    </form>
                @Html.ActionLink("Details", "Details", new { id=item.user_id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.user_id  })
            </td>
        </tr>
}
    </tbody>
</table>
