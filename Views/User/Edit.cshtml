@model DatabaseConnectie.Models.User

@{
    ViewData["Title"] = "Edit User";
}

<h2>@ViewData["Title"]</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="newUsername" class="control-label">Username:</label>
        <input type="text" id="newUsername" name="newUsername" class="form-control" value="@Model.username" />
        @Html.ValidationMessageFor(model => model.new_username, "", new { @class = "text-danger" })
    </div>

    <input type="hidden" name="id" value="@Model.user_id" />

    <button type="submit" class="btn btn-primary">Save Changes</button>
}

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
